<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_layout_margin"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_image_view_height"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/name_text_view_layout_margin"
            android:textSize="@dimen/name_text_view_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_text_view"
            style="@style/DescriptionTextView"
            android:drawableLeft="@drawable/ic_info_black_24dp" />

        <TextView
            android:id="@+id/location_text_view"
            style="@style/DescriptionTextView"
            android:autoLink="map"
            android:drawableLeft="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/access_time_text_view"
            style="@style/DescriptionTextView"
            android:drawableLeft="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:id="@+id/attach_money_text_view"
            style="@style/DescriptionTextView"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp" />

        <TextView
            android:id="@+id/phone_text_view"
            style="@style/DescriptionTextView"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>